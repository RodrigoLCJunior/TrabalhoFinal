<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projeto S - Security</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Postagem</h1>
        <a href="/users/logout" class="btn btn-danger mb-3">Sair</a>
        <h2>Minhas Postagens</h2>
        <div class="row">
            <% if (posts.length > 0) { %>
                <% posts.forEach(post => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">         
                        <img src="https://via.placeholder.com/400x200" class="card-img-top" alt="Imagem da Postagem">
                        <div class="card-body">
                            <h5 class="card-title"><%= post.titulo %></h5>
                            <p class="card-text"><%= post.nome %></p>
                            <a href="#" class="btn btn-primary">Saiba Mais</a>
                        </div>
                    </div>
                </div>   
            <% }) %>
            <% } else { %> 
                <div class="col-md-12">
                    <p class="text-center">Nenhuma postagem encontrada.</p>
                </div>
            <% } %> 
        </div>
        <div>
            <a href="/users/login" class="btn btn-secondary mt-3">Retornar</a>
        </div>

    <!-- Bootstrap JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
